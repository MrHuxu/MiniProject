<div class="col-sm-4 col-sm-offset-4">
  <div class="panel panel-info">

    <div class="panel-heading">
      <h3 class="panel-title">Sign in</h3>
    </div>

    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal', role: 'form'}) do |f| %>

        <br /><div>
          <%= f.label :email, for: 'si_email', class: 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= f.email_field :email, autofocus: true, type: 'email', class: 'form-control', id: 'si_email', placeholder: 'Email' %>
          </div>
        </div>

        <br /><br /><br /><div>
          <%= f.label :password, for: 'si_pw', class: 'col-sm-3 control-label' %>
          <div class="col-sm-9">
            <%= f.password_field :password, autocomplete: "off", type: 'password', class: 'form-control', id: 'si_pw' %></div>
        </div><br /><br /><br />

        <div class="col-sm-9 col-sm-offset-3">
          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
          <% end -%>
        </div><br /><br />

        <div class="col-sm-2 col-sm-offset-3"><%= f.submit "Sign in", class: 'btn btn-success btn-sm' %></div>
        <div class="col-sm-2 col-sm-offset-1"><%= link_to 'Sign up', '/authors/sign_up', class: 'btn btn-primary btn-sm' %></div>
      <% end %>
    </div>
  </div>
</div>
